<div class="uk-position-center uk-width-1-3@m container">
  <img data-src="/images/logo.png" alt="logo_racoo" uk-img>
  <form action="/auth/login" class="uk-form" method="POST">
    <div class="uk-margin">
      <div class="uk-inline">
        <span class="uk-form-icon" uk-icon="icon: mail"></span>
        <input class="uk-input uk-form-width-large" type="text" name="email">
      </div>
    </div>

    <div class="uk-margin">
      <div class="uk-inline">
        <span class="uk-form-icon" uk-icon="icon: lock"></span>
        <input class="uk-input uk-form-width-large" type="password" name="password">
      </div>
    </div>
    <button type="submit" class="uk-button uk-button-primary uk-width-1-1 uk-margin-small-bottom">Iniciar Sesi√≥n</button>
  </form>
  {{#if err}}
  <div class="uk-alert-danger" uk-alert>
    <a class="uk-alert-close" uk-close></a>
    <p>{{msg}}</p>
  </div>
  {{/if}}
</div>